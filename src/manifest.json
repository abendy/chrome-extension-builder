{
  "name": "Highlight",
  "description": "Highlight the web!",
  "icons": {
    "16": "assets/images/logo.png",
    "48": "assets/images/logo.png",
    "128": "assets/images/logo.png"
  },
  "version": "0.0.1",
  "author": "Allan Bendy <allan.bendy@gmail.com>",
  "browser_action": {
    "default_icon": {
      "19": "assets/images/logo.png",
      "38": "assets/images/logo.png"
    },
    "default_title": "Highlight the web!",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["assets/scripts/background.js"],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [{
    "css": ["assets/styles/content.css"],
    "js": ["assets/scripts/content.js"],
    "run_at": "document_idle",
    "all_frames": false,
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  }],
  "manifest_version": 2,
  "offline_enabled": false,
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "cookies",
    "storage",
    "tabs",
    "webNavigation",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "assets/img/*"
  ]
}
